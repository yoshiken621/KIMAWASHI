<h2>ユーザー編集</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %>（ニックネーム）<br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :age_select_id %>（年代）<br />
    <%= f.collection_select(:age_select_id, AgeSelect.all, :id, :name, {}, {class:"select-box", id:"age"}) %>
  </div>
  
  <div class="field">
    <%= f.label :sex_select_id %>（性別）<br />
    <%= f.collection_select(:sex_select_id, SexSelect.all, :id, :name, {}, {class:"select-box", id:"sex"}) %>
  </div>

  <div class="field">
    <%= f.label :email %>（メールアドレス）<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %> <i>(新しいパスワード＊変更しない場合は記入しないでください)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>(新しいパスワード確認)<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(現在のパスワード＊変更を加える場合は必ず記入してください)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "編集完了" %>
  </div>
<% end %>

