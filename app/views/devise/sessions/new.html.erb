<div class="text-center">
  <h2 class="mb-5 mt-5 display-3">Welcome to KIMAWASHI</h2>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    

    <div class="field mb-5" >
      <h4>
        <%= f.label :nickname %>(ニックネーム)<br />
        <%= f.text_field :nickname, autofocus: true, autocomplete: "name" %>
      </h4>
    </div>

    <div class="field mb-5">
      <h4>
        <%= f.label :password %>（パスワード）<br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </h4>
    </div>

    <div class="field mb-5">
      <h4>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      </h4>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
